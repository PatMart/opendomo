#!/usr/bin/make -f

PACKAGE=$(shell dh_listpackages)

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure
	mkdir -p var/opendomo/cgiroot/control var/opendomo/cgiroot/config var/opendomo/cgiroot/map \
	var/opendomo/cgiroot/tools etc/opendomo var/opendomo/log var/opendomo/log/stats var/opendomo/run \
	var/opendomo/tmp var/opendomo/plugins
	
override_dh_install:

	find . -maxdepth 1 -mindepth 1 -not -name Makefile -not -name debian -not -name src -print0 | \
		xargs -0 -r -i cp -a {} debian/$(PACKAGE)

override_dh_fixperms:
	dh_fixperms
	chown -R 1000:1000 debian/odbase/etc/opendomo
	chown -R 1000:1000 debian/odbase/usr/local/opendomo
	chown -R 1000:1000 debian/odbase/var/opendomo
	chown -R 1000:1000 debian/odbase/var/www
	chown -R root:root /etc/sudoers.d
	chmod 0555 /etc/sudoers.d
	chmod 0440 /etc/sudoers.d/*

override_dh_usrlocal:
